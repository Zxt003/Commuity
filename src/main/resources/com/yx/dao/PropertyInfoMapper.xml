<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yx.dao.PropertyInfoMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.yx.pojo.PropertyInfo">
                    <id column="id" property="id"/>
                    <result column="type_id" property="typeId"/>
                    <result column="money" property="money"/>
                    <result column="start_date" property="startDate"/>
                    <result column="end_date" property="endDate"/>
                    <result column="status" property="status"/>
                    <result column="house_id" property="houseId"/>
                    <result column="remarks" property="remarks"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id, type_id, money, start_date, end_date, status, house_id, remarks
        </sql>

    <delete id="deleteByHouIdAndTime" >
       delete from property_info where house_id=#{houId} and end_date  like '%${endDate}%'
    </delete>

    <resultMap id="queryListAllMap" type="com.yx.pojo.PropertyInfo" extends="BaseResultMap">
        <association property="owner" javaType="com.yx.pojo.Owner">
            <id column="id" property="id"></id>
            <result property="username" column="username"></result>
            <result property="tel" column="tel"></result>
        </association>
        <association property="house" javaType="com.yx.pojo.House">
            <id column="id" property="id"></id>
            <result property="numbers" column="numbers"></result>
        </association>
        <association property="type" javaType="com.yx.pojo.PropertyType">
            <id column="id" property="id"></id>
            <result property="name" column="name"></result>
        </association>
    </resultMap>

    <select id="queryListAll" parameterType="com.yx.pojo.PropertyInfo" resultMap="queryListAllMap">
        SELECT info.*,owner.username,house.numbers,type.name
        FROM property_info info
        LEFT JOIN house ON house.id = info.house_id
        LEFT JOIN OWNER ON owner.house_id = house.id
        LEFT JOIN property_type type ON type.id = info.type_id
        <where>
            <if test="house!=null">
                <if test="house.numbers!=null">
                    and house.numbers like '%${house.numbers}%'
                </if>
            </if>
            <if test="status!=null and status!=''">
                and info.status=#{status}
            </if>
        </where>
    </select>
</mapper>