<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yx.dao.CarchargeMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.yx.pojo.Carcharge">
                    <id column="id" property="id"/>
                    <result column="pay_date" property="payDate"/>
                    <result column="end_date" property="endDate"/>
                    <result column="money" property="money"/>
                    <result column="status" property="status"/>
                    <result column="owner_id" property="ownerId"/>
                    <result column="remarks" property="remarks"/>
                    <result column="type" property="type"/>
                    <result column="park_id" property="parkId"/>
        </resultMap>

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
            id, pay_date, end_date, money, status, owner_id, remarks, type, park_id
        </sql>

    <resultMap id="queryCarchargeAllMap" type="com.yx.pojo.Carcharge" extends="BaseResultMap">
        <association property="owner" javaType="com.yx.pojo.Owner">
            <id column="id" property="id"></id>
            <result column="username" property="username"></result>
        </association>
        <association property="parking" javaType="com.yx.pojo.Parking">
            <id column="id" property="id"></id>
            <result column="numbers" property="numbers"></result>
        </association>
    </resultMap>

    <select id="queryCarchargeAll" resultMap="queryCarchargeAllMap" parameterType="com.yx.pojo.Carcharge">
        SELECT car.*,park.numbers,owner.username
        FROM carcharge car
        LEFT JOIN OWNER ON car.owner_id = owner.id
        LEFT JOIN parking park ON car.park_id = park.id
        <where>
            <if test="parking!=null and parking!=''">
                and park.numbers = #{parking.numbers}   <!--精确查询-->
            </if>
            <if test="status!=null and status!=''">
                and car.status = #{status}
            </if>
        </where>
        order by car.id desc
    </select>

</mapper>